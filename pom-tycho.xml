<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.tourbook</groupId>
	<artifactId>mytourbook-parent</artifactId>
	<version>20.8.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>bundles/pom-tycho.xml</module>
		<module>features/pom-tycho.xml</module>
		<module>build/pom-tycho.xml</module>
		<module>LANGUAGE-FRAGMENTS/pom-tycho.xml</module>
	</modules>

	<properties>
		<tycho-version>2.0.0</tycho-version>
		<tycho.pomless.parent>../pom-tycho.xml</tycho.pomless.parent>
	</properties>
	<repositories>
		<repository>
			<id>eclipse_4.16</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/eclipse/updates/4.16</url>
		</repository>
		<repository>
			<id>train_2020-06</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/2020-06/</url>
		</repository>
		<repository>
			<id>babel</id>
			<layout>p2</layout>
			<url>https://download.eclipse.org/technology/babel/update-site/R0.18.0/2020-06/</url>
		</repository>
	</repositories>
	<build>
		<extensions>
			<extension>
				<groupId>org.eclipse.tycho.extras</groupId>
				<artifactId>tycho-pomless</artifactId>
				<version>${tycho-version}</version>
			</extension>
		</extensions>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<environments>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
